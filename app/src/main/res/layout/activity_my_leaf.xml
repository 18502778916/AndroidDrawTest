<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:visibility="gone">
        <com.example.myleafdemo.LeafLoadingView
            android:id="@+id/my_leaf_loading_view"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:visibility="gone"/>
        <com.example.myleafdemo.MyEasyProgressView
            android:id="@+id/my_easy_progress_view"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:visibility="gone"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/iv_fs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:background="@mipmap/fengshan"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.myleafdemo.RadarView
            android:id="@+id/my_radar_view"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>